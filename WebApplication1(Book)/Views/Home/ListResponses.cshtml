@model IEnumerable<PartyInvites.Models.GuestResponse>

@{
    Layout = null;
}

<!DOCTYPE html>
<style>
    .card-body {
        max-height:94vh;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Responses</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div>
        <div class="card-body text-center table-responsive">
            <h2>Here is the list of people attending the tournament</h2>
            <table class="table table-sm table-striped table-bordered" style="table-layout: fixed; overflow-x: auto">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        foreach (PartyInvites.Models.GuestResponse r in Model)
                        {
                            <tr>
                                <td style="overflow-x: auto; white-space: nowrap; max-width: 300px;">@r.Name</td>
                                <td style="overflow-x: auto; white-space: nowrap; max-width: 300px;">@r.Email</td>
                                <td style="overflow-x: auto; white-space: nowrap; max-width: 300px;">@r.Phone</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <a class="btn btn-success" style="background-color: mediumseagreen" asp-action="">Return to main page</a>
        </div>
    </div>

</body>
</html>

